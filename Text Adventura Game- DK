    "def NO_Pile_of_skeletons_event(): #number 6 dice - 2 Chances\n",
    "    import random\n",
    "    chances=2\n",
    "    safe_number=input(prompt=\"\"\"As you turn around leaving the pile of skeletons, a sword barely misses your chest, harming your arm\n",
    "You will have to fight the skeletons to continue your quest. Which number from 1 to 6 will save you? - You'll have 2 dice rolls\n",
    "\"\"\")\n",
    "    if safe_number==\"1\"or safe_number==\"2\"or safe_number==\"3\"or safe_number==\"4\"or safe_number==\"5\"or safe_number==\"6\":\n",
    "        safe_number=int(safe_number)\n",
    "        while chances>0:\n",
    "            input('<Press any key to roll the dice>\\n')\n",
    "            dice_roll=random.randint(1,6)\n",
    "            print(f\"The dice rolled {dice_roll}\\n\")\n",
    "            if safe_number==dice_roll:\n",
    "                print(\"You found a flaming sword that help you defeat the army of skeletons, it also cleared the path for the next gate\")\n",
    "                final_stage()\n",
    "                break\n",
    "            else:\n",
    "                chances -=1\n",
    "                if chances > 0:\n",
    "                    print(f\"\\nYou missed, you have {chances} left\")\n",
    "                elif chances == 0:\n",
    "                    print(\"\\nYou are out of chances, accept your fate\\n\")\n",
    "                    death_by_skeletons()\n",
    "                else:\n",
    "                    print(\"Error in the matrix \")\n",
    "\n",
    "    else:\n",
    "        print(\"Please enter a valid number\")\n",
